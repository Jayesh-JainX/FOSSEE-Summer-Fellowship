        // Toggle the mobile navigation drawer
        let mobileNavDrawerOpen = false;

        hamburgerMenu.addEventListener('click', () => {
            if (!mobileNavDrawerOpen) {
                // Slide in the mobile navigation drawer from left to right
                mobileNavDrawer.style.transform = 'translateX(0)';
                mobileNavDrawerOpen = true;
            } else {
                // Slide out the mobile navigation drawer
                mobileNavDrawer.style.transform = 'translateX(-100%)';
                mobileNavDrawerOpen = false;
            }
        });

        // Close mobileNavDrawer if the user clicks outside it
        document.addEventListener('click', (event) => {
            if (!mobileNavDrawer.contains(event.target) && !hamburgerMenu.contains(event.target)) {
                mobileNavDrawer.style.transform = 'translateX(-100%)';
                mobileNavDrawerOpen = false;
            }
        });

        // Initialize the mobile navigation drawer to be offscreen
        mobileNavDrawer.style.transform = 'translateX(-100%)';

