    <!-- JavaScript for Navigation -->
    <script>
        const hamburgerMenu = document.getElementById('hamburgerMenu');
        const navLinks = document.getElementById('navLinks');
        const mobileNavDrawer = document.getElementById('mobileNavDrawer');

        // Toggle the mobile navigation drawer
        let mobileNavDrawerOpen = false;

        hamburgerMenu.addEventListener('click', () => {
            if (!mobileNavDrawerOpen) {
                // Slide in the mobile navigation drawer from left to right
                mobileNavDrawer.style.transform = 'translateX(0)';
                mobileNavDrawerOpen = true;
            } else {
                // Slide out the mobile navigation drawer
                mobileNavDrawer.style.transform = 'translateX(-100%)';
                mobileNavDrawerOpen = false;
            }
        });

        // Close mobileNavDrawer if the user clicks outside it
        document.addEventListener('click', (event) => {
            if (!mobileNavDrawer.contains(event.target) && !hamburgerMenu.contains(event.target)) {
                mobileNavDrawer.style.transform = 'translateX(-100%)';
                mobileNavDrawerOpen = false;
            }
        });

        // Initialize the mobile navigation drawer to be offscreen
        mobileNavDrawer.style.transform = 'translateX(-100%)';

        // Hide the nav links for smaller screens and show the hamburger menu
        function resizeHandler() {
            if (window.innerWidth <= 768) {
                navLinks.style.display = 'none';
                hamburgerMenu.style.display = 'block';
                mobileNavDrawer.style.transform = 'translateX(-100%)';
                mobileNavDrawerOpen = false;
            } else {
                navLinks.style.display = 'flex';
                hamburgerMenu.style.display = 'none';
                mobileNavDrawer.style.transform = 'translateX(-100%)';
                mobileNavDrawerOpen = false;
            }
        }

        // Add smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();

                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    window.scroll({
                        top: target.offsetTop - 70, // Adjust the offset to account for the fixed navbar
                        behavior: 'smooth'
                    });
                }
                // Close mobileNavDrawer after navigation
                mobileNavDrawer.style.transform = 'translateX(-100%)';
                mobileNavDrawerOpen = false;
            });
        });

        window.addEventListener('resize', resizeHandler);
        resizeHandler(); // Initialize on load


