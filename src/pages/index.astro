    }

    // Initialize the carousel based on device size
    function initializeSponsorCarousel() {
      // Determine the timing based on screen size
      const sponsorSlideDuration = window.innerWidth <= 768 ? 5000 : 3000; // 5 seconds for mobile, 3 seconds for desktop

      // Determine whether to use mobile or desktop function
      if (window.innerWidth <= 768) {
        setInterval(sponsorAdvanceCarouselMobile, sponsorSlideDuration);
      } else {
        setInterval(sponsorAdvanceCarouselDesktop, sponsorSlideDuration);
      }
    }

    // Call initializeSponsorCarousel on load
    window.addEventListener("load", initializeSponsorCarousel);

    window.addEventListener("resize", function () {
      // Reload the page when the desktop size changes
      window.location.reload();
    });
